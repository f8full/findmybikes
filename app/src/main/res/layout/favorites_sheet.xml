<android.support.v7.widget.CardView
    android:id="@+id/fab_sheet"
    style="@style/Widget.MaterialSheetFab.Sheet"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- EMPTY LIST TEXT -->
    <TextView
        android:visibility="gone"
        android:id="@+id/empty_favorite_list_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="28sp"
        android:gravity="center"
        android:text="@string/no_favorite"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        android:id="@+id/favorites_sheet_content">

        <!-- Header -->
        <!--suppress AndroidDomInspection -->
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="@dimen/sheet_width"
            android:textSize="16sp"
            android:gravity="center"
            android:text="@string/favorites_sheet_header"
            android:singleLine="true"
            android:textColor="@color/primary_text_default_material_dark"
            android:background="@color/theme_primary_dark"
            android:id="@+id/favorites_sheet_header"
            android:visibility="visible" />

        <!--suppress AndroidDomInspection -->
        <android.support.v7.widget.RecyclerView
            android:layout_height="wrap_content"
            android:layout_width="@dimen/sheet_width"
            android:id="@+id/favorites_sheet_recyclerview"/>
    </LinearLayout>
</android.support.v7.widget.CardView>