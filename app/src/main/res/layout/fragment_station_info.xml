<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ludoscity.findmybikes.StationInfoFragment">

    <LinearLayout
        android:id="@+id/stationInfo"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >
        <!-- STATION NAME -->
        <TextView
            android:id="@+id/stationInfo_name"
            android:text="Station name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:padding="5dp"
            android:textSize="@dimen/abc_text_size_title_material"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:textColor="@color/primary_text_default_material_dark"
            android:background="#1976D2"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="3">
                <TextView
                    android:id="@+id/stationInfo_bikeAvailability"
                    android:text="24 bikes available"
                    android:layout_width="fill_parent"
                    android:layout_height="0px"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="24dp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/stationInfo_parkingAvailability"
                    android:text="13 docks available"
                    android:layout_width="fill_parent"
                    android:layout_height="0px"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="24dp"/>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0px"
                    android:layout_weight="1"
                    />
            </LinearLayout>

            <!-- RIGHT SIDE: USER LOCATION-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/stationInfo_distance"
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="2"
                    android:textSize="24dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    />

                <ImageView
                    android:id="@+id/arrowImage"
                    android:src="@drawable/direction_arrow"
                    android:layout_width="fill_parent"
                    android:layout_height="0px"
                    android:layout_weight="3"
                    android:padding="5dp"
                    android:rotation="0"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
