<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_weight="0.66"
        >
        <TextView
            android:id="@+id/favorite_stationName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:textSize="18sp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/favorite_distance"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/favorite_bikeAmount"
        android:layout_width="0px"
        android:layout_weight="0.18"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/favorite_parkingAmount"
        android:layout_width="0px"
        android:layout_weight="0.18"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/favorite_stationLocked"
        android:layout_width="0px"
        android:layout_weight="0.36"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/stationIsLocked"
        android:textSize="24sp"/>
</LinearLayout>