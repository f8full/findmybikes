<resources>
    <!--
              Base application theme for API 21+. This theme replaces
              MyTheme from resources/values/styles.xml on API 21+ devices.
    -->

    <style name="FindMyBikesTheme" parent="FindMyBikes.Base">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
    </style>


    <!-- so that single line items don't shrink too much -->
    <style name="layout_compat_textview_minheight">
        <item name="android:minHeight">46dp</item>
    </style>

    <!-- standard values grabbed from online samples -->
    <style name="listitem_floating_action_button"  parent="Widget.Design.FloatingActionButton">
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
    </style>

    <style name="map_floating_action_button_end_aligned">
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginEnd">@dimen/end_aligned_fab_margin_end</item>
        <item name="android:layout_marginBottom">@dimen/end_aligned_fab_margin_bottom</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
    </style>
    <style name="map_floating_action_button_top" parent="map_floating_action_button_end_aligned"/>

    <style name="map_floating_action_button_start_aligned">
        <item name="android:layout_marginStart">@dimen/start_aligned_fab_margin_start</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:layout_marginBottom">@dimen/start_aligned_fab_margin_bottom</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
    </style>
</resources>
